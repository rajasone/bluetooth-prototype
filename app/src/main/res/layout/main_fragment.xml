<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handler"
            type="com.example.rajasaboor.bluetoothprototype.searchdevices.SearchFragment" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/paired_devices_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            android:text="@string/paired_devices_string"
            android:textColor="@android:color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/paired_devices_recycler_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/paired_devices_text_view" />

        <TextView
            android:id="@+id/available_devices_text_view"
            android:layout_width="0dp"
            android:layout_marginStart="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            android:text="@string/available_devices_string"
            android:textColor="@android:color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/paired_devices_recycler_view" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/available_devices_recycler_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/available_devices_text_view" />

        <Button
            android:id="@+id/search_bluetooth_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:onClick="@{()-> handler.onClick()}"
            android:text="@string/search_bluetooth_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.971"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/available_devices_recycler_view"
            app:layout_constraintVertical_bias="0.913" />

        <TextView
            android:id="@+id/bluetooth_turend_off_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:padding="4dp"
            android:text="@string/bluetooth_off_message"
            android:textAlignment="center"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/number_of_available_devices"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="9dp"
            android:padding="4dp"
            android:text="@string/number_of_devices"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/available_devices_recycler_view"
            app:layout_constraintLeft_toRightOf="@+id/available_devices_text_view"
            app:layout_constraintTop_toBottomOf="@+id/paired_devices_recycler_view"
            app:layout_constraintVertical_bias="0.571" />

        <TextView
            android:id="@+id/number_of_paired_devices_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="9dp"
            android:padding="4dp"
            android:text="@string/number_of_devices"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/paired_devices_recycler_view"
            app:layout_constraintLeft_toRightOf="@+id/paired_devices_text_view"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/discover_progress_bar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:indeterminate="false"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/available_devices_recycler_view"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>
</layout>